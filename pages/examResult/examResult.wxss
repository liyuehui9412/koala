/* pages/examResult/examResult.wxss */

/* 顶部信号栏样式 */
.barClass{}
/* 顶部导航栏样式 */
.navClass{
  font-size:36rpx;
  font-weight:600;
}

/* wxss */
/* 这里的宽高是必须大于等于canvas圆环的直径 否则绘制到盒子外面就看不见了 */
/* 一开始设置 width:440rpx; height:440rpx; 发现 在360X640分辨率的设备，下绘制的圆环跑盒子外去了 */
/* 小程序使用rpx单位适配 ，但是canvas绘制的是px单位的。所以只能用px单位绘制的圆环在盒子内显示 */
.progress_box{
  position: relative;
  width:100%;
  height: 170px;  
  display: flex;  
  align-items: center;
  justify-content: center;
  margin: 40rpx auto 10rpx auto;
 }
 .progress_bg{
  position: absolute;
  width:170px;
  height: 170px;
 }
 .progress_canvas{
  width:170px;
  height: 170px;
 }
 .progress_text{
  position: absolute;
  height: 128px;
  width: 128px;
  border-radius: 100%;
  background:linear-gradient(360deg,rgba(201,255,246,1) 0%,rgba(228,255,247,1) 100%);
  box-shadow:0px 0px 10px 0px rgba(242,71,71,0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
 }
 .progress_text_fail{
  background:linear-gradient(360deg,#FFE3E3 0%,#FFCBCB 100%);
 }
.text_title{
  height:22px;
  line-height:22px;
  font-size:16px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  width:100%;
  text-align: center;
  color:#00BC96;
  margin: 18px 0 2px 0;
}
.text_title_fail{
  color: #FF6C6C;
}
.text_num{
  width:100%;
  text-align: center;
  height:54px;
  line-height:54px;
  font-size:52px;
  /* font-family:DINAlternate-Bold,DINAlternate; */
  font-family:DIN;
  font-weight:bold;
  color:#00BC96;
}
.text_num_fail{
  color: #FF6363;
}
.text_hint{
  height:16px;
  line-height:16px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  width:100%;
  text-align: center;
  color:#00BC96;
}
.text_hint_fail{
  color: #FF6363;
}
.result{
  position: relative;
}
.result_header{
  width: 100%;
  height: 620rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  z-index: 9;
  background: transparent;
}
.header_info{
  display: flex;
  justify-content: space-around;
  width: 690rpx;
}
.info_item{
  width: 150rpx;
  text-align: center;
}
.info_item_num{
  width: 100%;
  text-align: center;
  height:56rpx;
  line-height:56rpx;
  font-size:48rpx;
  font-family:DINAlternate-Bold,DINAlternate;
  font-weight:bold;
  color:#fff;
  margin: 16rpx 0;
}
.info_item_title{
  width: 100%;
  text-align: center;
  height:34rpx;
  line-height:34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#fff;
}
.result_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 620rpx;
  z-index: 1;
}
.result_again{
  height: 180rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.again_left{
  display: flex;
  justify-content: center;
  align-items: center;
}
.again_left_img{
  height: 60rpx;
  width: 60rpx;
  margin:0 16rpx 0 30rpx;
}

.again_left_content{
  width: 300rpx;
}
.content_title{
  height:44rpx;
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:44rpx;
  margin-bottom: 4rpx;
}
.content_hint{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(128,128,128,1);
  line-height:40rpx;
}
.again_btn{
  width:232rpx;
  text-align: center;
  height:72rpx;
  line-height: 72rpx;
  background:linear-gradient(180deg,rgba(0,214,152,1) 0%,rgba(0,188,150,1) 100%);
  border-radius:40rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin-right: 30rpx;
}
.again_btn_fail{
  background:linear-gradient(180deg,rgba(255,169,144,1) 0%,rgba(249,99,120,1) 100%);
}
.again_btn_hover{
  background:linear-gradient(180deg,rgba(0,188,150,1) 100%,rgba(0,214,152,1) 0% );
}
.again_btn_hover_fail{
  background:linear-gradient(180deg,rgba(249,99,120,1) 100%,rgba(255,169,144,1) 0%);
}









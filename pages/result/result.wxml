<!--pages/result/result.wxml-->
<!-- isShowBack == '1' 的时候，展示后退按钮 -->
<nav id='nav' title='必过500题' class='nav' bar-class="barClass" isShowBack='1' nav-class='navClass'></nav>
<view class='result' style='margin-top:{{navMarginTop}}px'>

  <view class="result_header">
    <view class='progress_box'>
      <canvas class="progress_bg" canvas-id="canvasProgressbg">  </canvas>
      <canvas class="progress_canvas" canvas-id="canvasProgress">  </canvas>
      <view class="progress_text">
        <view class="text_title">正确率</view>
        <view class="text_num">{{percentage}}<text class="text_num_per">%</text></view>
      </view>  
    </view>
    <view class="header_info">
      <view class="info_item">
        <view class="info_item_num">{{practiceTime}}</view>
        <view class="info_item_title">练题时长</view>
      </view>
      <view class="info_item">
        <view class="info_item_num">{{wrongNum}}</view>
        <view class="info_item_title">错题数</view>
      </view>
      <view class="info_item">
        <view class="info_item_num">{{practiceNum}}</view>
        <view class="info_item_title">本次答题</view>
      </view>
    </view>
  </view>
  <view class="result_detail">
    <view class="detail_info">
      <view class="detail_info_title">累计答题</view>
      <view class="detail_info_num">{{fourPracticeAnswerCount.already}}</view>
      <view class="detail_info_word">题</view>
    </view>
    <view class="detail_surplus">
      剩余未做{{fourPracticeAnswerCount.all}}题
    </view>
  </view>
  <view class="result_line">
    <view class="result_line_active"  style='width:{{activeWidth}}'></view>
    <view class="result_line_hint" style="left:{{activeLeft}}rpx"><text class="hint_trigon"></text> {{activeWidth}}</view>
  </view>
  <view>
    <view class="result_sum">本次共答错<text class="sum_num">{{wrongNum}}</text>题</view>
    <view class="result_hint">现在回顾，错题记得更牢固</view>
    <view class="result_btn">
      <button class="btn_back" hover-class="btn_back_hover" bindtap="wrongPractice">错题回顾</button>
      <button class="btn_exercise" hover-class="btn_exercise_hover" bindtap="jumpToPractice">刷题练习</button>
    </view>
  </view>
  <view class="result_all_right">
    <view class="all_right_hint">再做一次，记忆更牢固！</view>
   <button class="btn_back" hover-class="btn_back_hover">刷题练习</button>
  </view>


</view>


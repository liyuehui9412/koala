/* pages/practiceIndex/practiceIndex.wxss */
page {
	background:rgba(248,248,248,1);
}
.index_box {
	width: 100%;
}

.index_head {
	width: 100%;
	height: 288rpx;
	background-image: url('https://static.kaolakaola.cn/tiku/index_bg_img.png');
	background-repeat: no-repeat;
	background-size: 100%; 
	position: relative;
}

.head_url {
	width: 694rpx;
	height: 166rpx;
	position: absolute;
	bottom: -85rpx;
	left: 50%;
	background-image: url('https://static.kaolakaola.cn/tiku/index_user_bg.png');
	background-size: 100%;
	transform: translate(-50%, 0);
	display: flex;
	align-items: center;
}

.user_head_url {
	width: 120rpx;
	height: 120rpx;
	margin-left: 36rpx;
}

.user_image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	border:4rpx solid #FFE0B3;
}

.user_name {
	font-size: 32rpx;
	color: #333;
	margin-left: 22rpx;
}

.vip_logo {
	width: 64rpx;
	height: 32rpx;
	margin-left: 20rpx;
}

.practice {
	width: 100%;
	margin-top: 140rpx;
	box-sizing: border-box;
}

.nav_box {
	display: flex;
	align-items: flex-end;
	padding: 0 30rpx;
}

.nav_item {
	margin-right: 48rpx;
	color: #828282;
	font-size: 32rpx;
	font-weight: 400;
}

.active {
	font-size: 40rpx;
	color: #333;
	font-weight: bold;
	border-bottom: 8rpx solid #00BC96;
}

.topic {
	margin-top: 32rpx;
}

.topic_item {
	width: 100%;
	height: 384rpx;
	position: relative;
}

.topic_bg_img {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	z-index: 1;
}

.topic_position_box {
	position: absolute;
	z-index: 9;
	padding: 32rpx 64rpx;
	box-sizing: border-box;
	color: #fff;
}

.topic_title {
	font-size: 40rpx;
	font-weight: bold;
	margin-top: 20rpx;
}

.topic_num {
	font-size: 28rpx;
	font-weight: 400;
}

.topic_margin_left {
	margin-left: 20rpx;
}

.num_color {
	color: #FFF600;
}

.topic_des {
	font-size: 28rpx;
	margin-top: 16rpx;
}

.jump_btn {
	background-color: #fff;
	border-radius: 40rpx;
	color: #00BC96;
	font-size: 36rpx;
	width: 268rpx;
	height: 72rpx;
	line-height: 72rpx;
	text-align: center;
	font-weight: bold;
	margin-top: 80rpx;
	position: absolute;
}

.test_color {
	color: #409DFD;
}